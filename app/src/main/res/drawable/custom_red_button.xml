<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#79675e" />
            <gradient android:angle="-90" android:startColor="#ef4b4b" android:endColor="#ac0f0f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#79675e" />
            <solid android:color="#a75e36"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#79675e" />
            <gradient android:angle="-90" android:startColor="#ac0f0f" android:endColor="#ef4b4b" />
        </shape>
    </item>
</selector>