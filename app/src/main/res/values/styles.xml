<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/PrimaryColor</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDarkColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="blueButton" parent="AppTheme">
        <item name="android:background">#0615e3</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="greenButton" parent="AppTheme">
        <item name="android:background">#21c604</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="grayButton" parent="AppTheme">
        <item name="android:background">#4e4c4c</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>

    </style>




</resources>
